<?xml version="1.0"?>
<!-- Start real robot -->
<launch>
    <arg name="lidar" default="true" />
    <arg name="camera_s" default="true" />
    <arg name="camera_r" default="true" />
    <arg name="uc" default="true" />
    <arg name="solver" default="true" />
    <arg name="gui_server" default="true" />
    <arg name="bag_record" default="true" />

<!-- Robot configuration: lidar, camera and rosserial -->
    <include if="$(arg uc)" file="$(find wr8_software)/launch/robot_configuration/serial_uc_link.launch">
        <arg name="device" value="/dev/serial/by-id/usb-STMicroelectronics_ChibiOS_RT_Virtual_COM_Port_404-if00" />
    </include>
    <include if="$(arg lidar)" file="$(find wr8_software)/launch/robot_configuration/lidar.launch"/>
    <include if="$(arg camera_s)" file="$(find wr8_software)/launch/robot_configuration/signs_camera.launch">
        <arg name="device" value="/dev/v4l/by-id/usb-HD_USB_Camera_HD_USB_Camera_SN0001-video-index0" />
        <arg name="frame_id" value="signs_camera" />
    </include>
    <include if="$(arg camera_r)" file="$(find wr8_software)/launch/robot_configuration/road_camera.launch">
        <arg name="device" value="/dev/v4l/by-id/usb-046d_0825_CA00E440-video-index0" />
        <arg name="frame_id" value="road_camera" />
    </include>

<!-- Sign and line detection -->
    <node if="$(arg solver)" pkg="wr8_software" type="main_solver.py" name="main_solver" output="screen" respawn="false"/>
    <include if="$(arg camera_s)" file="$(find wr8_ai)/launch/start_detection_node.launch"/>
    <include if="$(arg camera_r)" file="$(find wr8_ai)/launch/start_line_node.launch"/>

<!-- Communication with Android -->
    <include if="$(arg gui_server)" file="$(find wr8_gui_server)/launch/gui_server.launch"/>

<!-- Bag record -->
    <node if="$(arg bag_record)" pkg="rosbag" type="record" name="rosbag_record" args="-o $(env HOME)/bags/main /signs_camera/image_raw/compressed /road_camera/image_raw/compressed /tf /robot/cmd_vel /robot/odom_pose /robot/state /scan /diagnostics /rosout"/>   
</launch>
