<?xml version="1.0"?>
<!-- Start node that allows communication with STM32-->
<launch>
  <arg name="lidar" default="true" />
  <arg name="device" default="/dev/serial/by-id/usb-STMicroelectronics_ChibiOS_RT_Virtual_COM_Port_400-if00" doc="[/dev/serial/by-id/usb-Silicon_Labs_CP2102_USB_to_UART_Bridge_Controller_0001-if00-port0]"/>

  <group ns="robot">
    <node pkg="rosserial_python" type="serial_node.py" name="quadro_node" output="screen" respawn="true">
      <param name="port" value="$(arg device)" /> 
    </node>
    <node pkg="wr8_software" type="odometry_pub.py" name="odometry_node" output="screen" respawn="false"/>
  </group>
</launch>
